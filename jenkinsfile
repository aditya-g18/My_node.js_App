pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'my-node-app:latest'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Adding diagnostic steps
                sh 'git --version'
                sh 'echo $GIT_URL'

                // Explicitly mention branch as 'main'
                git branch: 'main', url: 'https://github.com/aditya-g18/My_node.js_App.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE)
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    docker.run('-d -p 8081:8080', DOCKER_IMAGE)
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution finished!'
        }
    }
}
